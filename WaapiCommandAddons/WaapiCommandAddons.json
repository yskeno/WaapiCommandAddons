{
  "commands": [
    {
      "id": "ak.wca.remote_connect_to_localhost",
      "displayName": "Connect to Localhost",
      "defaultShortcut": "H",
      "program": "${WwiseInstallAddons}\\WaapiCommandAddons.exe",
      "startMode": "SingleSelectionSingleProcess",
      "args": [
        "--remote",
        "--connect"
      ],
      "mainMenu": {
        "basePath": "WAAPI"
      }
    },
